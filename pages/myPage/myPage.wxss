/* pages/myPage/myPage.wxss */
.header {
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-items: center;
  /* background-image: url();*/
  background-color: #ff6666;
}

.info-nickname {
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
  margin-top: 13rpx;
}

.img-avatar-wrapper {
  width: 170rpx;
  height: 170rpx;
  margin-left: 100rpx;
}

.loginBtn {
  width: 200rpx;
  height: 70rpx;
  margin: 40rpx 250rpx 50rpx 70rpx;
  margin-right: 100rpx;
}

.img-avatar-login {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  margin: 13rpx 0rpx 0rpx 150rpx;
}

.img-avatar-unlogin {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  margin: 13rpx 0rpx 0rpx 80rpx;
}

.nick-name {
  font-family: 'Times New Roman', Times, serif;
  font-size: 60rpx;
  color: yellow;
}

.undesigned {
  margin-top: 40rpx;
  font-size: 30rpx;
  color: rgb(187, 255, 0);
}

.catagory-wrapper {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  width: 92%;
  margin-left: 4%;
  border: 2rpx solid grey;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 5rpx grey;
}

.category {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  margin: 30rpx 0rpx 20rpx 35rpx;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
}

.categorytext {
  margin-left: 15rpx;
  font-size: 30rpx;
}

.icon-right {
  position: absolute;
  right: 80rpx;
  width: 30rpx;
  height: 30rpx;
}

.dividingLine {
  background: grey;
  width: 100%;
  height: 1rpx;
}